        {% include "partials/stylesheets.njk" %}

        <script type="text/javascript" src="{{ '/' | url }}lib/infusion/infusion-uio.min.js"></script>
        {% include "partials/scripts.njk" %}
    </head>
    <body>
        {% include "partials/uio.njk" %}
        {% include "partials/header.njk" %}
        <main class="px-6">
            <article>
                {% include "partials/page-header.njk" %}
                {% block toc %}
                <div class="toc hidden">
                </div>
                {% endblock %}
                {% block content %}
                <div class="content space-y-4">
                {{ content | safe }}
                </div>
                {% endblock %}
            </article>
        </main>
        <script src="https://identity.netlify.com/v1/netlify-identity-widget.js" defer></script>
    </body>
</html>
